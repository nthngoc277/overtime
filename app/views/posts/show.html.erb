<div>
  <h2><%= @post.rationale %></h2>
</div>
<hr>
<div>
  <div>
    <h3><span>Overtime amount requested: </span><%= @post.overtime_hours %></h3>
  </div>

  <div>
    <h3><span>Employee: </span><%= @post.user.full_name %></h3>
  </div>

  <div>
    <h3><span>Date: </span><%= @post.date %></h3>
  </div>

  <div>
    <h3><span>Current stage of approval: </span><%= label_status @post.status %></h3>
  </div>
</div>
