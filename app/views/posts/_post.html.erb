<tr>
  <td><%= post.id %></td>
  <td><%= post.overtime_hours %></td>
  <td><%= post.date %></td>
  <td><%= link_to truncate(post.rationale, length: 30), post_path(post) %></td>
  <td><%= post.user.full_name %></td>
  <td><%= label_status post.status %></td>
  <td><%= link_to '', edit_post_path(post), id: "edit_#{post.id}", class: 'glyphicon glyphicon-pencil index-icon' if policy(post).update? %></td>
  <td><%= link_to '', post_path(post), method: :delete, id: "delete_post_#{post.id}_form_index", class: 'glyphicon glyphicon-trash index-icon', data: { confirm: 'Are you sure?' } %></td>
</tr>
