<tr>
  <td><%= post.id %></td>
  <td><%= post.overtime_hours %></td>
  <td><%= post.date %></td>
  <td><%= truncate(post.rationale, length: 30) %></td>
  <td><%= post.user.full_name %></td>
  <td><%= label_status post.status %></td>
  <td><%= link_to "Edit", edit_post_path(post), id: "edit_#{post.id}" if policy(post).update? %></td>
  <td><%= link_to "Delete", post_path(post), method: :delete, id: "delete_post_#{post.id}_form_index", data: { confirm: 'Are you sure?' } %></td>
</tr>